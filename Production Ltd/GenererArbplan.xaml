<Window x:Class="Production_Ltd.GenererArbplan"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    Title="Some Game Data" Height="216" Width="435">
    <StackPanel>
        <ListView ItemsSource="{Binding listeInfo}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="140" Header="Ordre ID" DisplayMemberBinding="{Binding OrdreID}"  />
                    <GridViewColumn Width="140" Header="Deadline"  DisplayMemberBinding="{Binding Deadline}" />
                    <GridViewColumn Width="140" Header="Antal" DisplayMemberBinding="{Binding Antal}" />
                    <GridViewColumn Width="140" Header="Kunde" DisplayMemberBinding="{Binding Kunde}" />
                    <GridViewColumn Width="140" Header="Produkttype" DisplayMemberBinding="{Binding Produkttype}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button HorizontalAlignment="Right" Margin="5,5,5,5" Content="Add Row" Click="AddRow_Click" />
    </StackPanel>
</Window>
